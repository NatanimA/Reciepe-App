<%= form_with model: recipe, method: :post, url: recipes_path ,scope: :new_recipe, local:true do |form| %>
    <h3 class="display-3">Create Recipe</h3>
    <hr>
    <div class="mb-3">
        <%= form.label :name,class:"form-label"%>
        <%= form.text_field :name,class:"form-control", :required => true %>
    </div>
    <div class="mb-3">
        <%= form.label :preparation_time,class:"form-label"%>
        <%= form.time_field :preparation_time ,class:"form-control", :required => true %>
    </div>
    <div class="mb-3">
        <%= form.label :cooking_time,class:"form-label"%>
        <%= form.time_field :cooking_time, class:"form-control", :required => true %>
    </div>
    <div class="mb-3">
        <%= form.label :description,class:"form-label"%>
        <%= form.text_area :description, class:"form-control", :required => true %>
    </div>
    <div class="mb-3">
        <div class="custom-control custom-switch">
            <%= form.check_box :public, class: "custom-control-input", id: "customSwitch1"   %>
            <label class="custom-control-label" for="customSwitch1">: Public</label>
        </div>
    </div>
    <div>
        <%= form.label :photo, class:"form-label" %>
        <%= form.text_field :photo, class:"form-control", :required => true %>
    </div>
    <div class="mb-3 text-center">
        <%= form.submit "Add Recipe",disable_with:"Creating Recipe...", class:"btn btn-success" %>
    </div>
<% end %>
